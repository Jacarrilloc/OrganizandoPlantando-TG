<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#91BF63"
    android:orientation="vertical"
    tools:context=".TermsAndConditionsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_10sdp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/logoCeres2"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="229dp"
                    android:layout_height="121dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/im_logo_ceres" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:text="@string/t_rminos_y_condiciones"
                    android:fontFamily="@font/manropemedium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_25sdp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="@dimen/_293sdp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:foregroundGravity="fill_vertical"
                            android:text="@string/terminos"
                            android:textAlignment="center"
                            android:fontFamily="@font/manroperegular"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:layout_editor_absoluteY="@dimen/_283sdp" />
                    </LinearLayout>
                </ScrollView>

                <Button
                    android:id="@+id/termsAndConditionsActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_60sdp"
                    android:layout_marginRight="@dimen/_60sdp"
                    android:fontFamily="@font/manropemedium"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/dr_white_button"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_17sdp"
                    android:text="@string/aceptar"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </ScrollView>



    </FrameLayout>


</LinearLayout>