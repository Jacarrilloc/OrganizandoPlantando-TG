<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    tools:context=".view.forms.Form_RAC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/returnArrowButtonFormOnetoFormListElement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:clickable="true"
            android:contentDescription="@string/boton_para_regresar"
            android:tint="#F8F5F5"
            app:backgroundTint="#91BF63"
            app:layout_constraintBottom_toBottomOf="@+id/gardenProfilePicture"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="@+id/gardenProfilePicture"
            app:layout_constraintTop_toTopOf="@+id/gardenProfilePicture"
            app:layout_constraintVertical_bias="0.064"
            app:srcCompat="@drawable/dr_return_arrow" />

        <TextView
            android:id="@+id/form_RHC_name"
            android:text="@string/RHC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/manropesemibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_17sdp" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="@dimen/_15sdp"
            android:layout_margin="@dimen/_20sdp">

            <TextView
                android:id="@+id/info1"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manropemedium"
                android:layout_margin="@dimen/_2sdp"
                android:text="@string/responsable" />

            <EditText
                android:id="@+id/responsable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:ems="10"
                android:inputType="textPersonName"
                android:fontFamily="@font/manroperegular"
                android:textColor="@color/black"
                android:background="@drawable/dr_white_input_text"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/manropemedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ingreso_egreso" />

            <TextView
                android:id="@+id/textShowSpinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone"
                android:textColor="@color/black"
                android:background="@drawable/dr_white_input_text"/>

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:spinnerMode="dropdown"
                android:fontFamily="@font/manroperegular"
                android:backgroundTint="@color/black"
                android:overlapAnchor="false"
                android:textAlignment="inherit"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textView10"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/manropemedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tipo" />

            <TextView
                android:id="@+id/textTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/black"
                android:background="@drawable/dr_white_input_text"
                android:text="TextView" />

            <Spinner
                android:id="@+id/spinnerType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:fontFamily="@font/manroperegular"
                android:spinnerMode="dropdown"
                android:backgroundTint="@color/black"
                android:overlapAnchor="false"
                android:textAlignment="inherit"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textView9"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/manropemedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/c_digo" />

            <EditText
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_margin="@dimen/_2sdp"
                android:inputType="text"
                android:fontFamily="@font/manroperegular"
                android:background="@drawable/dr_white_input_text"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/manropemedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nombre_item" />

            <EditText
                android:id="@+id/itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_margin="@dimen/_2sdp"
                android:inputType="text"
                android:fontFamily="@font/manroperegular"
                android:background="@drawable/dr_white_input_text"
                android:textColor="@color/black"/>



            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/manropemedium"
                android:textColor="@color/black"
                android:text="@string/unidades_de_ingreso_o_egreso_kg_lts_hrs_etc" />

            <EditText
                android:id="@+id/units"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:fontFamily="@font/manroperegular"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/dr_white_input_text"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/info3"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manropemedium"
                android:layout_margin="@dimen/_2sdp"
                android:text="@string/medidas_del_ingreso_o_egreso" />

            <EditText
                android:id="@+id/measurement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:fontFamily="@font/manroperegular"
                android:textColor="@color/black"
                android:background="@drawable/dr_white_input_text"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/manropemedium"
                android:textColor="@color/black"
                android:text="@string/valor_total_cop" />

            <EditText
                android:id="@+id/cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:layout_margin="@dimen/_2sdp"
                android:fontFamily="@font/manroperegular"
                android:background="@drawable/dr_white_input_text"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manropemedium"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:text="@string/comentarios" />

            <EditText
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manroperegular"
                android:ems="10"
                android:inputType="text"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/dr_white_input_text"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/create_forms1_buttom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:fontFamily="@font/manropemedium"
                android:text="@string/agregar_formulario"
                android:background="@drawable/dr_green_button"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_80sdp"
        android:background="@drawable/dr_shadow_top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ludification"
            android:layout_width="@dimen/_98sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/_2sdp"
            android:background="@color/white"
            android:drawableTop="@drawable/im_dictionary"
            android:fontFamily="@font/manropemedium"
            android:padding="@dimen/_5sdp"
            android:layout_weight="1"
            android:textSize="@dimen/_13sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:stateListAnimator="@null"
            android:text="@string/Diccionary"
            android:textAllCaps="false"
            android:textColor="@color/grayLetters" />

        <Button
            android:id="@+id/rewards"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="@font/manropemedium"
            android:layout_marginBottom="@dimen/_2sdp"
            android:background="@color/white"
            android:drawableTop="@drawable/im_reward_icon"
            android:padding="@dimen/_5sdp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/_13sdp"
            android:stateListAnimator="@null"
            android:text="@string/bonos"
            android:textAllCaps="false"
            android:textColor="@color/grayLetters" />

        <Button
            android:id="@+id/myGardens"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginBottom="@dimen/_2sdp"
            android:background="@color/white"
            android:drawableTop="@drawable/im_plant_icon"
            android:fontFamily="@font/manropemedium"
            android:padding="@dimen/_5sdp"
            android:layout_weight="1"
            android:textSize="@dimen/_13sdp"
            android:stateListAnimator="@null"
            android:text="@string/Gardens"
            android:textAllCaps="false"
            android:textColor="@color/grayLetters" />

        <Button
            android:id="@+id/profile"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/_2sdp"
            android:fontFamily="@font/manropemedium"
            android:background="@color/white"
            android:drawableTop="@drawable/im_user_icon"
            android:padding="@dimen/_5sdp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/_13sdp"
            android:stateListAnimator="@null"
            android:text="@string/User"
            android:textAllCaps="false"
            android:textColor="@color/grayLetters" />

    </LinearLayout>
</LinearLayout>