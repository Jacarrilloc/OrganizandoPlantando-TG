<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".gardens.GardenActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gardenProfilePicture"
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:layout_gravity="center"
            android:background="@color/lightGreen"
            android:scaleType="fitCenter" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/returnArrowButtonToHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:contentDescription="@string/boton_para_regresar"
            android:tint="@color/white"
            app:backgroundTint="#91BF63"
            app:srcCompat="@drawable/dr_return_arrow" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gardenNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif"
                android:text="Ozaín"
                android:textColor="@color/black"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:background="@drawable/im_edit_icon"
                android:contentDescription="@string/boton_para_a_adir_personas"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/editButton2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/im_users_icon"
                android:contentDescription="@string/boton_de_editar"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/messageButton"
                android:layout_width="32sp"
                android:layout_height="32sp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:background="@drawable/im_whatsapp_logo"
                android:contentDescription="Boton para mensaje"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_weight="0.25"
                android:background="@drawable/im_download_icon"
                android:contentDescription="Boton de descargar"
                android:scaleType="centerInside" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/comabaquinta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textSize="18sp"
                android:text="@string/informaci_n_de_huerta"
                android:textColor="@color/black"
                android:textStyle="bold"
               />

            <TextView
                android:id="@+id/descriptionGarden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:text="@string/description"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_margin="2sp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/im_user_icon2" />

                    <TextView
                        android:id="@+id/gardenParticipants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="@string/participants1"
                        android:textColor="@color/gray"
                        android:textStyle="italic"
                        android:textSize="16sp"/>
                </LinearLayout>




                    <TextView
                        android:id="@+id/formulariosText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/formularioss"
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"
                        android:textSize="18sp"
                        android:textStyle="bold"/>




                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="400dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/im_gray_line" />



            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imageButtonWorm"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:background="@drawable/im_worm"
                            android:contentDescription="Lombricultura"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/lombriculturaText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2sp"
                            android:gravity="center"
                            android:text="Lombricultura"
                            android:textColor="#040404"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/toolsButton"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="10dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/im_shovel"
                            android:contentDescription="Herramientas"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/herramientasText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2sp"
                            android:text="Herramientas"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/seedTime"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="10dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:background="@drawable/im_small_shovel"
                            android:contentDescription="Proceso de siembra"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/procesoSiembraText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2sp"
                            android:text="Proceso de siembra"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/moreFormsButtom"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="10dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/im_add_form2"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2sp"
                            android:text="Ver más Formularios"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
            <Button
                android:id="@+id/formsRegister"
                android:layout_width="290dp"
                android:layout_height="47dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#91BF63"
                android:text="@string/formsRegister"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:background="@drawable/dr_green_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logoDecoration" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="411dp"
        android:layout_height="122dp"
        android:background="@drawable/dr_shadow_top"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/ludification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="7dp"
            android:background="@color/white"
            android:drawableTop="@drawable/im_dictionary"
            android:padding="10dp"
            android:stateListAnimator="@null"
            android:text="@string/Diccionary"
            android:textAllCaps="false"
            android:textColor="@color/grayLetters" />

        <Button
            android:id="@+id/gardens"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="7dp"
            android:background="@color/white"
            android:drawableTop="@drawable/im_colombia"
            android:padding="10dp"
            android:stateListAnimator="@null"
            android:text="@string/Map"
            android:textAllCaps="false"
            android:textColor="@color/grayLetters" />

        <Button
            android:id="@+id/myGardens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="7dp"
            android:background="@color/white"
            android:drawableTop="@drawable/im_plant_icon"
            android:padding="10dp"
            android:stateListAnimator="@null"
            android:text="@string/Gardens"
            android:textAllCaps="false"
            android:textColor="@color/grayLetters" />

        <Button
            android:id="@+id/profile"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="7dp"
            android:background="@color/white"
            android:drawableTop="@drawable/im_user_icon"
            android:padding="5dp"
            android:stateListAnimator="@null"
            android:text="@string/User"
            android:textAllCaps="false"
            android:textColor="@color/grayLetters" />


    </LinearLayout>
</LinearLayout>