<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dr_white_input_text">


    <androidx.cardview.widget.CardView
        android:id="@+id/view2"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:elevation="12dp"
        android:foregroundGravity="center"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/garden_imagen_list_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/im_logo_ceres"
            android:visibility="visible" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/garden_name_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_weight="1"
        android:text="@string/garden_name"
        android:textColor="@color/black"
        android:textSize="@dimen/_17sdp" />

    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:visibility="visible"
        android:src="@drawable/dr_arrow_next"/>
</LinearLayout>