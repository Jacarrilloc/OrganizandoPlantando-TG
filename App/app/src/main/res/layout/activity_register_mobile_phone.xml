<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GreenBackgroung"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context=".auth.RegisterMobilePhone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/returnArrowButtonSeleectPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:clickable="true"
            android:contentDescription="@string/boton_para_regresar"
            android:tint="#F8F5F5"
            app:backgroundTint="#91BF63"
            app:layout_constraintBottom_toBottomOf="@+id/gardenProfilePicture"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="@+id/gardenProfilePicture"
            app:layout_constraintTop_toTopOf="@+id/gardenProfilePicture"
            app:layout_constraintVertical_bias="0.064"
            app:srcCompat="@drawable/dr_return_arrow"
            android:focusable="true" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            app:srcCompat="@drawable/im_logo_ceres" />
    </LinearLayout>

    <TextView
        android:id="@+id/welcome_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_30sdp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_margin="@dimen/_10sdp"
        android:text="@string/hola_bienvenido_a_a_ceres" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_20sdp"
        android:text="@string/ingresa_tu_n_mero_de_celular_para_poder_crear_y_participar_en_las_huertas" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_300sdp"
            android:layout_gravity="center|top"
            app:srcCompat="@drawable/im_background_phone_add_activity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/phone_Imput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:background="@drawable/dr_white_input_text"
                    android:ems="10"
                    android:hint="@string/n_mero"
                    android:inputType="phone"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/editTextBackground" />

                <ImageButton
                    android:id="@+id/continueButtom_phone_activity"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="0"
                    android:background="@drawable/dr_white_input_text"
                    app:srcCompat="@drawable/dr_arrow_next" />

            </LinearLayout>

            <TextView
                android:id="@+id/later_Buttom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0sp"
                android:text="@string/m_s_tarde"
                android:textAlignment="center"
                android:textSize="@dimen/_20sdp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>