<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dr_white_input_text">

    <ImageView
        android:id="@+id/garden_imagen_list_item"
        android:layout_width="119dp"
        android:layout_height="77dp"
        android:layout_margin="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/im_logo_ceres"
        android:visibility="visible" />

    <TextView
        android:id="@+id/garden_name_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:text="Garden Name"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:visibility="visible"
        android:src="@drawable/dr_arrow_next"/>





</LinearLayout>