<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logoDecoration"
        android:layout_width="532dp"
        android:layout_height="457dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/decoration" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_margin="50sp"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:autoSizeTextType="uniform"
            android:text="Bienvenido(a) de nuevo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_margin="10sp"
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textStyle="italic"
                android:hint="Correo Electronico"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textColorHint="@color/editTextBackground"
                android:inputType="textEmailAddress"
                android:background="@drawable/imput_text_style"/>

            <EditText
                android:layout_margin="10sp"
                android:id="@+id/editTextTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textStyle="italic"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:hint="Contraseña"
                android:textColorHint="@color/editTextBackground"
                android:inputType="textPassword"
                android:background="@drawable/imput_text_style"/>

            <Button
                android:layout_margin="10sp"
                android:id="@+id/buttonLoginActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="italic"
                android:text="Iniciar Sesión"
                android:backgroundTint="@null"
                android:background="@drawable/button_ok_style"/>

            <Button
                android:id="@+id/fotgotPasswordButtom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="¿Olvidaste tu contraseña?"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.7"
            android:text="¿Aún no tienes una cuenta?"
            android:textColor="@color/editTextBackground"
            android:textSize="15sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/registerButtom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:textAlignment="textStart"
            android:gravity="center"
            android:text="REGISTRATE"
            android:textColor="@color/mainButtonColor"
            android:textSize="18sp"
            android:textStyle="italic" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>