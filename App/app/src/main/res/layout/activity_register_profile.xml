<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".auth.RegisterProfileActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logoDecoration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/im_lines_decoration" />

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_30sdp"
                    android:fontFamily="@font/manroperegular"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="@string/registrarse"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_25sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                </LinearLayout>

                <EditText
                    android:id="@+id/imputNameRegisterActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manroperegular"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/dr_white_input_text"
                    android:ems="10"
                    android:hint="@string/nombre1"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/editTextBackground" />

                <EditText
                    android:id="@+id/imputLastNameRegisterActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="@font/manroperegular"
                    android:background="@drawable/dr_white_input_text"
                    android:ems="10"
                    android:hint="@string/apellido"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/editTextBackground" />

                <Spinner
                    android:id="@+id/spinnerGenderRegisterActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/dr_white_input_text" />

                <EditText
                    android:id="@+id/imputEmailRegisterActivity"
                    android:fontFamily="@font/manroperegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/dr_white_input_text"
                    android:ems="10"
                    android:hint="@string/correo_electronico1"
                    android:inputType="textEmailAddress"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/editTextBackground" />

                <EditText
                    android:id="@+id/imputPasswordRegisterActivity"
                    android:fontFamily="@font/manroperegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/dr_white_input_text"
                    android:ems="10"
                    android:hint="@string/contrase_ia"
                    android:inputType="textPassword"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/editTextBackground" />

                <EditText
                    android:id="@+id/imputConfirmPaswordRegisterActivity"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/manroperegular"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/dr_white_input_text"
                    android:ems="10"
                    android:hint="@string/repetir_contrase_a"
                    android:inputType="textPassword"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/editTextBackground" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/manroperegular"
                        android:text="@string/al_crear_una_cuenta_aceptas_los"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/terms_condition_buttom_registerProfileActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:fontFamily="@font/manroperegular"
                        android:text="@string/t_rminos_y_condiciones2"
                        android:textAllCaps="false"
                        android:textColor="@color/mainButtonColor" />


                </LinearLayout>

                <Button
                    android:id="@+id/createAcountButtomRegisterActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manropesemibold"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_20sdp"
                    android:background="@drawable/dr_green_button"
                    android:backgroundTint="@null"
                    android:gravity="center"
                    android:text="@string/crear_cuenta"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_16sdp" />

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</LinearLayout>