<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".view.auth.DeleteAccountActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">


        <ImageView
            android:id="@+id/logoDecoration"
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/im_lines_decoration" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginTop="@dimen/_1sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/logoCeres2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_185sdp"
                    app:srcCompat="@drawable/im_logo_ceres_green" />

                <TextView
                    android:id="@+id/deleteAccountText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/manropemedium"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:gravity="center"
                    android:text="@string/ingrese_el_link_de_whatsapp_de_la_huerta"
                    android:textColor="#050505"
                    android:textSize="@dimen/_23sdp" />

                <EditText
                    android:id="@+id/groupLInk"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_53sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/dr_white_input_text"
                    android:textColor="@color/black"
                    android:fontFamily="@font/manroperegular"
                    android:textSize="@dimen/_14sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_20sdp">

                    <Button
                        android:id="@+id/addLinkbutton"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_45sdp"
                        android:fontFamily="@font/manropesemibold"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_22sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/dr_green_button"
                        android:backgroundTint="#91BF63"
                        android:text="@string/agregar" />

                    <Button
                        android:id="@+id/returnButtonLink"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/_15sdp"
                        android:textAllCaps="false"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/manropesemibold"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_22sdp"
                        android:background="@drawable/dr_cancel_button"
                        android:text="@string/regresar"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</LinearLayout>