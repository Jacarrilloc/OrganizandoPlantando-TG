<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".NewToAppActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_411sdp"
                    android:layout_height="@dimen/_501sdp"
                    android:background="@drawable/im_back_1" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/im_back_2" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/im_back_3" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="@dimen/_229sdp"
                    android:layout_height="@dimen/_230sdp"
                    android:layout_marginTop="@dimen/_140sdp"
                    android:layout_marginStart="@dimen/_50sdp"
                    android:background="@drawable/im_gardener" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="186dp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="@drawable/im_logo_ceres_green" />

                <Button
                    android:id="@+id/createProfileNewToAppActivity"
                    android:layout_width="@dimen/_263sdp"
                    android:layout_height="@dimen/_43sdp"
                    android:background="@drawable/dr_green_button"
                    android:layout_marginTop="@dimen/_400sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:text="@string/CreateProfile"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_18sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_380sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_77sdp"
                        android:text="@string/question1"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_16sdp" />

                    <TextView
                        android:id="@+id/loginTextNewOnMapActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_77sdp"
                        android:text="@string/login_text1"
                        android:textAllCaps="true"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_16sdp" />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>