<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="ProgressBarStyleGreen" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/dr_progress_bar_green</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="SearchView" parent="AppTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/manroperegular</item>
    </style>

    <style name="AppProgressBarStyle" parent="@android:style/Widget.ProgressBar">
        <item name="android:colorAccent">@color/green</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">16dp</item>
        <item name="android:indeterminateDuration">3000</item>
    </style>

</resources>
